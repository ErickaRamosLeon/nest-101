{
    "version": "0.2.0",
    "configurations": [        
      {
        "name": "Launch Nest",
        "type": "node",
        "request": "attach",
        "restart": true,
        "port": 9229,
        "address": "0.0.0.0",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app",
        "protocol": "inspector",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "name": "Debug: transaction",
        "type": "node",
        "request": "attach",
        "restart": true,
        "port": 9238,
        "address": "0.0.0.0",
        "localRoot": "${workspaceFolder}/apps/transactions/src",
        "remoteRoot": "/apps/transactions/src",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "name": "Debug: producer",
        "type": "node",
        "request": "attach",
        "restart": true,
        "port": 9239,
        "address": "0.0.0.0",
        "localRoot": "${workspaceFolder}/apps/producer/src",
        "remoteRoot": "/apps/producer/src",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "name": "Debug: consumer",
        "type": "node",
        "request": "attach",
        "restart": true,
        "port": 9240,
        "address": "0.0.0.0",
        "localRoot": "${workspaceFolder}/apps/consumer/src",
        "remoteRoot": "/apps/consumer/src",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }